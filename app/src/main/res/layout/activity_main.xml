<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="guthboss.com.hackathonproject.MainActivity">



    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/notification_updates"
        android:textAlignment="center"
        android:layout_above="@+id/send_notification"
        android:layout_alignParentStart="true"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/enter_notification"
        android:layout_toStartOf="@+id/send_notification"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:hint="@string/notify"
        android:textAlignment="center"
        android:layout_below="@+id/notification_updates"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test_connection"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="@string/text"


        android:layout_marginStart="49dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send_notification"
        android:text="@string/send"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="84dp" />
</RelativeLayout>
