<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="guthboss.com.hackathonproject.MainActivity">



    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/notificationupdates"
        android:textAlignment="center"
        android:layout_above="@+id/sendnotification"
        android:layout_alignParentStart="true"
        android:divider="@null"
        android:dividerHeight="0dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/enternotification"
        android:layout_toStartOf="@+id/sendnotification"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:hint="Enter Notifications"
        android:textAlignment="center"
        android:layout_below="@+id/notificationupdates"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testconnection"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="TEST"


        android:layout_marginStart="49dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendnotification"
        android:text="SEND"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="84dp" />
</RelativeLayout>